

class Solution {
    public int[] bellmanFord(int V, int[][] edges, int src) {
        
        int[]distance = new int[V];
        
        Arrays.fill(distance,(int)1e8);
        
        distance[src] = 0;
        
        for(int i=0;i<V-1;i++){
            for(int j=0;j<edges.length;j++){
                int u  =  edges[j][0];
                int v  =  edges[j][1];
                int wt = edges[j][2];
                
                if(distance[u]!= (int)1e8 && distance[u] + wt<distance[v]){
                    distance[v] = distance[u] + wt;
                }
            }
        }
        
        
        for(int j=0;j<edges.length;j++){
            
            int u  =  edges[j][0];
            int v  =  edges[j][1];
            int wt =  edges[j][2];
                
            if(distance[u]!= (int)1e8 && distance[u] + wt < distance[v]){
                int[]temp = new int[1];
                temp[0] = -1;
                return temp;
            }
        
        }
        
        return distance;
    }
}
